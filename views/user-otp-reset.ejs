<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="wpOceans">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png">
    <title>Maxtron Associates</title>
    <link href="/css/themify-icons.css" rel="stylesheet">
    <link href="/css/flaticon.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/owl.carousel.css" rel="stylesheet">
    <link href="/css/owl.theme.css" rel="stylesheet">
    <link href="/css/slick.css" rel="stylesheet">
    <link href="/css/slick-theme.css" rel="stylesheet">
    <link href="/css/swiper.min.css" rel="stylesheet">
    <link href="/css/owl.transitions.css" rel="stylesheet">
    <link href="/css/jquery.fancybox.css" rel="stylesheet">
    <link href="/css/odometer-theme-default.css" rel="stylesheet">
    <link href="/sass/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>

    <!--=====start page-wrapper =====-->
    <div class="page-wrapper">
        <!--===== start preloader =====-->
        <div class="preloader">
            <div class="vertical-centered-box">
                <div class="content">
                    <div class="loader-circle"></div>
                    <div class="loader-line-mask">
                        <div class="loader-line"></div>
                    </div>
                    <img src="/images/preloader.png" alt="">
                </div>
            </div>
        </div>
        <!--===== end preloader =====-->

        <!--  cursor style -->
        <div class="cursor"></div>
        <div class="cursor2"></div>

        <div class="wpo-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <form class="wpo-accountWrapper" action="/api/auth/verify-otp-password" method="POST">
                            <div class="wpo-accountInfo">
                                <div class="wpo-accountInfoHeader">
                                    <a href="/"><img src="/images/max-logo.png" alt=""></a>
                                    <a class="wpo-accountBtn" href="/user-register">
                                        Create Account
                                    </a>
                                </div>
                                <div class="image">
                                    <img src="/images/login.png" alt="">
                                </div>
                                <div class="back-home">
                                    <a class="wpo-accountBtn" href="/">
                                        Back To Home
                                    </a>
                                </div>
                            </div>
                            <div class="wpo-accountForm form-style">
                                <div class="fromTitle">
                                    <h2>OTP Page</h2>
                                    <p> OTP sent to registered email: <%= email %>
                                    </p>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <label>Email</label>
                                        <input type="email" id="email" name="email" value="<%= email %>" readonly
                                            required>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <label>OTP</label>
                                        <input type="text" id="otp" name="otp" placeholder="Enter your OTP here.."
                                            required>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <button type="submit" class="wpo-accountBtn">Submit OTP</button>
                                    </div>
                                </div>
                                <p class="subText">already have an account? <a href="/user-login">Login Now</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!--===== end page-wrapper =====-->
    <script>
        document.querySelector('form[action="/api/auth/verify-otp-password"]').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent the default form submission

            const formData = new FormData(this);
            const email = formData.get('email');
            const otp = formData.get('otp');

            try {
                const response = await fetch('/api/auth/verify-otp-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, otp }),
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    // Redirect to the reset password page with the email as a query parameter
                    window.location.href = result.redirectUrl;
                } else {
                    Toastify({
                        text: result.message || 'An error occurred',
                        duration: 3000,
                        close: true,
                        gravity: "top",
                        position: "center",
                        style: {
                            background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                        },
                        stopOnFocus: true,
                    }).showToast();
                }
            } catch (error) {
                Toastify({
                    text: 'An error occurred while verifying OTP',
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    style: {
                        background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                    },
                    stopOnFocus: true,
                }).showToast();
            }
        });
    </script>
    <!--===== All JavaScript files =====-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <!--===== Plugins for this template =====-->
    <script src="/js/modernizr.custom.js"></script>
    <script src="/js/jquery-plugin-collection.js"></script>
    <script src="/js/gsap.js"></script>
    <script src="/js/gsap-scroll-smoother.js"></script>
    <script src="/js/SmoothScroll.js"></script>
    <script src="/js/gsap-scroll-trigger.js"></script>
    <script src="/js/gsap-split-text.js"></script>
    <script src="/js/simpleParallax.js"></script>
    <!--===== Custom script for this template =====-->
    <script src="/js/script.js"></script>
    <script src="/js/gsap-script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>

</html>