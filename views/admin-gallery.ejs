                    <!-- /header-dashboard -->
                    <!-- main-content -->
                    <div class="main-content">
                        <!-- main-content-wrap -->
                        <!-- Gallery Management Section -->
                         <div class="main-content-inner">
                            <div class="container-fluid py-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h4 class="mb-0">Gallery Management</h4>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addGalleryModal">
                                        Add New Gallery Image
                                    </button>
                                </div>
    
                                <!-- Gallery Table -->
                                <div class="table-responsive">
                                    <table class="table table-bordered align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Image</th>
                                                <th>Category</th>
                                                <th>Caption</th>
                                                <th>Created At</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (gallery && gallery.length > 0) { %>
                                                <% gallery.forEach(function(item, idx) { %>
                                                    <tr>
                                                        <td><%= (currentPage - 1) * 12 + idx + 1 %></td>
                                                        <td>
                                                            <img src="<%= item.imageUrl %>" alt="Gallery Image" style="max-width: 100px; max-height: 80px;">
                                                        </td>
                                                        <td><%= item.category %></td>
                                                        <td><%= item.caption || '-' %></td>
                                                        <td><%= item.createdAt ? item.createdAt.toLocaleString() : '' %></td>
                                                        <td>
                                                            <!-- Edit Button -->
                                                            <button 
                                                                class="btn btn-sm btn-warning me-1"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#editGalleryModal"
                                                                data-id="<%= item._id %>"
                                                                data-imageurl="<%= item.imageUrl %>"
                                                                data-category="<%= item.category %>"
                                                                data-caption="<%= item.caption %>"
                                                            >
                                                                Edit
                                                            </button>
                                                            <!-- Delete Button -->
                                                            <form action="/galleries/<%= item._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image?');">
                                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">No gallery images found.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
    
                                <!-- Pagination -->
                                <% if (totalPages > 1) { %>
                                    <nav aria-label="Gallery pagination">
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=12">Previous</a>
                                            </li>
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>&limit=12"><%= i %></a>
                                                </li>
                                            <% } %>
                                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=12">Next</a>
                                            </li>
                                        </ul>
                                    </nav>
                                <% } %>
                            </div>
                         </div>
                       

                        <!-- Add Gallery Modal -->
                        <div class="modal fade" id="addGalleryModal" tabindex="-1" aria-labelledby="addGalleryModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <form action="/galleries" method="POST" enctype="multipart/form-data" class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addGalleryModalLabel">Add New Gallery Image</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="addImage" class="form-label">Image <span class="text-danger">*</span></label>
                                            <input type="file" class="form-control" id="addImage" name="image" accept="image/*" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="addCategory" class="form-label">Category <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="addCategory" name="category" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="addCaption" class="form-label">Caption</label>
                                            <input type="text" class="form-control" id="addCaption" name="caption">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Add Image</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Edit Gallery Modal -->
                        <div class="modal fade" id="editGalleryModal" tabindex="-1" aria-labelledby="editGalleryModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <form id="editGalleryForm" method="POST" enctype="multipart/form-data" class="modal-content">
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editGalleryModalLabel">Edit Gallery Image</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Current Image</label>
                                            <div>
                                                <img id="editCurrentImage" src="" alt="Current Image" style="max-width: 100px; max-height: 80px;">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="editImage" class="form-label">Change Image</label>
                                            <input type="file" class="form-control" id="editImage" name="image" accept="image/*">
                                        </div>
                                        <div class="mb-3">
                                            <label for="editCategory" class="form-label">Category <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="editCategory" name="category" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="editCaption" class="form-label">Caption</label>
                                            <input type="text" class="form-control" id="editCaption" name="caption">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <script>
                        // Populate Edit Modal with data
                        document.addEventListener('DOMContentLoaded', function () {
                            var editModal = document.getElementById('editGalleryModal');
                            editModal.addEventListener('show.bs.modal', function (event) {
                                var button = event.relatedTarget;
                                var id = button.getAttribute('data-id');
                                var imageUrl = button.getAttribute('data-imageurl');
                                var category = button.getAttribute('data-category');
                                var caption = button.getAttribute('data-caption');

                                // Set form action
                                var form = document.getElementById('editGalleryForm');
                                form.action = '/galleries/' + id + '?_method=PUT';

                                // Set current image
                                document.getElementById('editCurrentImage').src = imageUrl;

                                // Set category and caption
                                document.getElementById('editCategory').value = category || '';
                                document.getElementById('editCaption').value = caption || '';
                            });
                        });
                        </script>
