                                                            data-category="<%= job.category %>"
                                                            data-employmenttype="<%= job.employmentType %>"
                                                            data-location="<%= job.location %>"
                                                            data-workarrangement="<%= job.workArrangement %>"
                                                            data-experience="<%= job.experience %>"
