                        <script>
                        // --- CREATE JOB LOGIC ---
                        let createSkills = [];
                        document.getElementById('addCreateSkillBtn').onclick = function() {
                            const input = document.getElementById('createSkillInput');
                            const val = input.value.trim();
                            if (val && !createSkills.includes(val)) {
                                createSkills.push(val);
                                renderCreateSkills();
                                input.value = '';
                            }
                        };
                        function renderCreateSkills() {
                            const list = document.getElementById('createSkillsList');
                            list.innerHTML = '';
                            createSkills.forEach((skill, idx) => {
                                const btn = document.createElement('button');
                                btn.type = 'button';
                                btn.className = 'btn btn-sm btn-outline-info me-1 mb-1';
                                btn.textContent = skill + ' ×';
                                btn.onclick = () => {
                                    createSkills.splice(idx, 1);
                                    renderCreateSkills();
                                };
                                list.appendChild(btn);
                            });
                        }
                        document.getElementById('createJobForm').onsubmit = async function(e) {
                            e.preventDefault();
                            const form = e.target;
                            const data = {
                                title: form.title.value,
                                category: form.category.value,
                                employmentType: form.employmentType.value,
                                location: form.location.value,
                                workArrangement: form.workArrangement.value,
                                experience: form.experience.value,
                                description: form.description.value,
                                skills: createSkills
                            };
                            try {
                                const res = await fetch('/createJob', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(data)
                                });
                                if (res.ok) {
                                    location.reload();
                                } else {
                                    alert('Failed to create job');
                                }
                            } catch (err) {
                                alert('Error: ' + err.message);
                            }
                        };

                        // --- EDIT JOB LOGIC ---
                        let editSkills = [];
                        document.getElementById('addEditSkillBtn').onclick = function() {
                            const input = document.getElementById('editSkillInput');
                            const val = input.value.trim();
                            if (val && !editSkills.includes(val)) {
                                editSkills.push(val);
                                renderEditSkills();
                                input.value = '';
                            }
                        };
                        function renderEditSkills() {
                            const list = document.getElementById('editSkillsList');
                            list.innerHTML = '';
                            editSkills.forEach((skill, idx) => {
                                const btn = document.createElement('button');
                                btn.type = 'button';
                                btn.className = 'btn btn-sm btn-outline-info me-1 mb-1';
                                btn.textContent = skill + ' ×';
                                btn.onclick = () => {
                                    editSkills.splice(idx, 1);
                                    renderEditSkills();
                                };
                                list.appendChild(btn);
                            });
                        }
                        // Open edit modal and fill data
                        document.querySelectorAll('.edit-job-btn').forEach(btn => {
                            btn.onclick = function() {
                                const id = btn.getAttribute('data-id');
                                document.getElementById('editJobId').value = id;
                                document.getElementById('editTitle').value = btn.getAttribute('data-title');
                                document.getElementById('editCategory').value = btn.getAttribute('data-category');
                                document.getElementById('editEmploymentType').value = btn.getAttribute('data-employmenttype');
                                document.getElementById('editLocation').value = btn.getAttribute('data-location');
                                document.getElementById('editWorkArrangement').value = btn.getAttribute('data-workarrangement');
                                document.getElementById('editExperience').value = btn.getAttribute('data-experience');
                                document.getElementById('editDescription').value = btn.getAttribute('data-description');
                                try {
                                    editSkills = JSON.parse(btn.getAttribute('data-skills')) || [];
                                } catch { editSkills = []; }
                                renderEditSkills();
                                var editModal = new bootstrap.Modal(document.getElementById('editJobModal'));
                                editModal.show();
                            }
                        });
                        document.getElementById('editJobForm').onsubmit = async function(e) {
                            e.preventDefault();
                            const form = e.target;
                            const id = form.id.value;
                            const data = {
                                title: form.title.value,
                                category: form.category.value,
                                employmentType: form.employmentType.value,
                                location: form.location.value,
                                workArrangement: form.workArrangement.value,
                                experience: form.experience.value,
                                description: form.description.value,
                                skills: editSkills
                            };
                            try {
                                const res = await fetch('/updatejob/' + id, {
                                    method: 'PUT',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(data)
                                });
                                if (res.ok) {
                                    location.reload();
                                } else {
                                    alert('Failed to update job');
                                }
                            } catch (err) {
                                alert('Error: ' + err.message);
                            }
                        };

                        // --- DELETE JOB LOGIC ---
                        document.querySelectorAll('.delete-job-form').forEach(form => {
                            form.onsubmit = async function(e) {
                                e.preventDefault();
                                if (!confirm('Are you sure you want to delete this job?')) return;
                                const id = form.getAttribute('data-id');
                                try {
                                    const res = await fetch('/deleteJob/' + id, { method: 'DELETE' });
                                    if (res.ok) {
                                        location.reload();
                                    } else {
                                        alert('Failed to delete job');
                                    }
                                } catch (err) {
                                    alert('Error: ' + err.message);
                                }
                            }
                        });

                        // --- TOGGLE STATUS LOGIC ---
                        document.querySelectorAll('.toggle-status-btn').forEach(btn => {
                            btn.onclick = async function(e) {
                                e.preventDefault();
                                const id = btn.getAttribute('data-id');
                                try {
                                    const res = await fetch('/Status/' + id + '/toggle', { method: 'PATCH' });
                                    if (res.ok) {
                                        location.reload();
                                    } else {
                                        alert('Failed to toggle status');
                                    }
                                } catch (err) {
                                    alert('Error: ' + err.message);
                                }
                            }
                        });
                        </script>
                     
