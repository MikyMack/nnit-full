                        <style>
                        .tag-input-list {
                            min-height: 38px;
                            padding: 4px 0;
                        }
                        .tag-badge {
                            display: inline-flex;
                            align-items: center;
                            background: #e3f2fd;
                            color: #1976d2;
                            border-radius: 20px;
                            padding: 4px 12px 4px 10px;
                            margin: 2px 4px 2px 0;
                            font-size: 0.95em;
                            font-weight: 500;
                            transition: background 0.2s;
                        }
