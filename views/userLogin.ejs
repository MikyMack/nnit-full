<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="wpOceans">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png">
    <title>Maxtron Associates</title>
    <link href="/css/themify-icons.css" rel="stylesheet">
    <link href="/css/flaticon.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/owl.carousel.css" rel="stylesheet">
    <link href="/css/owl.theme.css" rel="stylesheet">
    <link href="/css/slick.css" rel="stylesheet">
    <link href="/css/slick-theme.css" rel="stylesheet">
    <link href="/css/swiper.min.css" rel="stylesheet">
    <link href="/css/owl.transitions.css" rel="stylesheet">
    <link href="/css/jquery.fancybox.css" rel="stylesheet">
    <link href="/css/odometer-theme-default.css" rel="stylesheet">
    <link href="/sass/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>

    <!--=====start page-wrapper =====-->
    <div class="page-wrapper">
         <!--===== start preloader =====-->
        <div class="preloader">
            <div class="vertical-centered-box">
                <div class="content">
                    <div class="loader-circle"></div>
                    <div class="loader-line-mask">
                        <div class="loader-line"></div>
                    </div>
                    <img src="/images/preloader.png" alt="">
                </div>
            </div>
        </div>
        <!--===== end preloader =====-->

        <!--  cursor style -->
        <div class="cursor"></div>
        <div class="cursor2"></div>

        <div class="wpo-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <form class="wpo-accountWrapper" id="loginForm">
                            <div class="wpo-accountInfo">
                                <div class="wpo-accountInfoHeader">
                                    <a href="/"><img src="/images/max-logo.png" alt=""></a>
                                    <a class="wpo-accountBtn" href="/user-register">
                                        <span class="">Create Account</span>
                                    </a>
                                </div>
                                <div class="image">
                                    <img src="/images/login.png" alt="">
                                </div>
                                <div class="back-home">
                                    <a class="wpo-accountBtn" href="/">
                                        <span class="">Back To Home</span>
                                    </a>
                                </div>
                            </div>
                            <div class="wpo-accountForm form-style">
                                <div class="fromTitle">
                                    <h2>Login</h2>
                                    <p>Sign into your Maxtron account</p>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <label>Email</label>
                                        <input type="text" id="email" name="email" placeholder="Enter your email id" required>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input class="pwd6" type="password" placeholder="Enter your password" name="password" required>
                                            <span class="input-group-btn">
                                                <button class="btn btn-default reveal" type="button"><i class="ti-eye"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <div class="check-box-wrap">
                                            <div class="forget-btn">
                                                <a href="/forgot-password">Forgot Password?</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <!-- Hidden input field for guestCart -->
                                        <input type="hidden" name="guestCart" id="guestCartInput">
                                        <button type="submit" class="wpo-accountBtn">Login</button>
                                    </div>
                                </div>
                                <p class="subText">Don't have an account? <a href="/user-register">Create free account</a></p>
                            </div>
                        </form>
                        
                        <!-- JavaScript to handle form submission and clear localStorage -->
                     
                        <script>
                            document.getElementById('loginForm').addEventListener('submit', async function (event) {
                                event.preventDefault(); // Prevent the default form submission
                        
                                // Fetch guest cart from localStorage
                                const guestCart = JSON.parse(localStorage.getItem('guestCart')) || [];
                        
                                // Set the guestCart data in the hidden input field
                                document.getElementById('guestCartInput').value = JSON.stringify(guestCart);
                        
                                // Create form data
                                const formData = new FormData(this);
                        
                                // Submit the form data using Fetch API
                                const response = await fetch('/api/auth/user-login', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json', // Set the correct content type
                                    },
                                    body: JSON.stringify({
                                        email: formData.get('email'),
                                        password: formData.get('password'),
                                        guestCart: formData.get('guestCart'),
                                    }),
                                });
                        
                                if (response.ok) {
                                    // Clear the guest cart from localStorage after successful login
                                    localStorage.removeItem('guestCart');
                        
                                    // Redirect to the home page or any other page
                                    window.location.href = '/';
                                } else {
                                    // Handle login error
                                    const data = await response.json();
                                    Toastify({
                                        text: data.message,
                                        duration: 3000,
                                        close: true,
                                        gravity: "top",
                                        position: "right",
                                        backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
                                    }).showToast();
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <!--===== end page-wrapper =====-->

    <!--===== All JavaScript files =====-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <!--===== Plugins for this template =====-->
    <script src="/js/modernizr.custom.js"></script>
    <script src="/js/jquery-plugin-collection.js"></script>
    <script src="/js/gsap.js"></script>
    <script src="/js/gsap-scroll-smoother.js"></script>
    <script src="/js/SmoothScroll.js"></script>
    <script src="/js/gsap-scroll-trigger.js"></script>
    <script src="/js/gsap-split-text.js"></script>
    <script src="/js/simpleParallax.js"></script>
    <!--===== Custom script for this template =====-->
    <script src="/js/script.js"></script>
    <script src="/js/gsap-script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>
</html>