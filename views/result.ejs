<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="fas fa-trophy me-2"></i>Assessment Result</h3>
                    </div>
                    <div class="card-body">
                        
                        <% if (!attempt.isResultUnlocked) { %>
                            <!-- Locked Result -->
                            <div class="text-center py-4">
                                <i class="fas fa-lock fa-4x text-warning mb-3"></i>
                                <h4 class="text-warning">Result Locked</h4>
                                <p class="text-muted">To view your detailed result, please unlock it using one of the options below:</p>
                                
                                <div class="row mt-4">
                                    <div class="col-md-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5><i class="fas fa-tag me-2 text-success"></i>Use Coupon Code</h5>
                                                <form id="couponForm" class="mt-3">
                                                    <input type="hidden" id="attemptId" value="<%= attempt._id %>">
                                                    <div class="input-group">
                                                        <input type="text" id="couponCode" class="form-control" placeholder="Enter coupon code" required>
                                                        <button type="submit" class="btn btn-success">Apply</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5><i class="fas fa-credit-card me-2 text-primary"></i>Make Payment</h5>
                                                <p class="mb-3">Unlock your result by paying ₹5000</p>
                                                <button class="btn btn-primary w-100" onclick="initiatePayment()">
                                                    Pay ₹5000 to Unlock
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- Unlocked Result -->
                            <div class="text-center py-4">
                                <i class="fas fa-unlock fa-4x text-success mb-3"></i>
                                <h4 class="text-success">Result Unlocked</h4>
                                
                                <div class="score-display my-4">
                                    <h1 class="display-4 fw-bold text-primary"><%= score %>/<%= total %></h1>
                                    <p class="text-muted">Your Score</p>
                                </div>
                                
                                <!-- Detailed results can be shown here -->
                                <div class="detailed-results mt-4">
                                    <h5>Detailed Analysis</h5>
                                    <!-- Add detailed result display logic -->
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="text-center mt-4">
                            <a href="/assesment" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Assessments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Coupon form handling
        document.getElementById('couponForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const attemptId = document.getElementById('attemptId').value;
            const couponCode = document.getElementById('couponCode').value;
            
            try {
                const response = await fetch('/applyCoupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ attemptId, couponCode })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Coupon applied successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error applying coupon');
            }
        });
        
        function initiatePayment() {
            // Implement your payment gateway integration here
            alert('Redirecting to payment gateway...');
            // For Razorpay or other payment gateways
        }
    </script>
</body>
</html>