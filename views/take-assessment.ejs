<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Take Assessment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="fas fa-file-alt me-2"></i><%= assessment.title %></h3>
                    </div>
                    <div class="card-body">
                        <form id="assessmentForm" action="/submit" method="post">
                            <input type="hidden" name="attemptId" value="<%= attempt._id %>">
                            
                            <% assessment.questions.forEach(function(q, index) { %>
                                <div class="question-card mb-4 p-3 border rounded">
                                    <h5 class="question-text mb-3">
                                        <span class="badge bg-secondary me-2">Q<%= index + 1 %></span>
                                        <%= q.question.questionText %>
                                    </h5>
                                    
                                    <div class="options">
                                        <% q.question.options.forEach(function(option, optIndex) { %>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" 
                                                       type="radio" 
                                                       name="answers[<%= index %>][questionId]" 
                                                       value="<%= q.question._id %>"
                                                       id="q<%= index %>_opt<%= optIndex %>"
                                                       required>
                                                <input type="hidden" 
                                                       name="answers[<%= index %>][selected]" 
                                                       value="<%= optIndex %>">
                                                <label class="form-check-label" for="q<%= index %>_opt<%= optIndex %>">
                                                    <%= option %>
                                                </label>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% }); %>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Assessment
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle radio button selection
        document.querySelectorAll('.form-check-input').forEach(radio => {
            radio.addEventListener('change', function() {
                const hiddenInput = this.parentElement.querySelector('input[type="hidden"]');
                // The value is already set in the hidden input, just ensure form validation
            });
        });

        // Form submission handling
        document.getElementById('assessmentForm').addEventListener('submit', function(e) {
            const unanswered = document.querySelectorAll('.question-card').length - 
                             document.querySelectorAll('.form-check-input:checked').length;
            
            if (unanswered > 0) {
                e.preventDefault();
                alert(`You have ${unanswered} unanswered questions. Please answer all questions before submitting.`);
            }
        });
    </script>
</body>
</html>