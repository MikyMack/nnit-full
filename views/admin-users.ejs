                    <script>
                        function downloadUserList(format) {
                            // Send a request to the server to generate the document
                            fetch(`/download-user-list?format=${format}`, {
                                method: 'GET',
                            })
                                .then(response => {
                                    if (response.ok) {
                                        return response.blob();
                                    } else {
                                        throw new Error('Failed to download user list');
                                    }
                                })
                                .then(blob => {
                                    // Create a download link for the file
                                    const url = window.URL.createObjectURL(blob);
                                    const a = document.createElement('a');
                                    a.href = url;
                                    a.download = `user-list.${format}`; // Set the file name
                                    document.body.appendChild(a);
                                    a.click(); // Trigger the download
                                    document.body.removeChild(a);
                                    window.URL.revokeObjectURL(url); // Clean up
                                })
                                .catch(error => {
                                    console.error('Error downloading user list:', error);
                                    alert('Failed to download user list');
                                });
                        }
                    </script>
                    <script>
                        // Toggle Client
                        // Function to handle admin actions (make admin, remove admin, block, unblock)
                        async function handleAdminAction(url, successMessage) {
                            try {
                                const response = await fetch(url, {
                                    method: 'PUT',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                });

                                const result = await response.json();

                                if (response.ok && result.success) {
                                    // Display success message
                                    Toastify({
                                        text: result.message || successMessage,
                                        duration: 3000,
                                        close: true,
                                        gravity: "top",
                                        position: "center",
                                        style: {
                                            background: "linear-gradient(to right, #00b09b, #96c93d)",
                                        },
                                        stopOnFocus: true,
                                    }).showToast();

                                    // Reload the page after a delay
                                    setTimeout(() => {
                                        window.location.reload();
                                    }, 3000);
                                } else {
                                    // Display error message
                                    Toastify({
                                        text: result.message || 'An error occurred',
                                        duration: 3000,
                                        close: true,
                                        gravity: "top",
                                        position: "center",
                                        style: {
                                            background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                                        },
                                        stopOnFocus: true,
                                    }).showToast();
                                }
                            } catch (error) {
                                Toastify({
                                    text: 'An error occurred while performing the action',
                                    duration: 3000,
                                    close: true,
                                    gravity: "top",
                                    position: "center",
                                    style: {
                                        background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                                    },
                                    stopOnFocus: true,
                                }).showToast();
                            }
                        }

                        // Make a user admin
                        function makeAdmin(userId) {
                            handleAdminAction(`/admin-make-admin/${userId}`, 'User is now an admin.');
                        }

                        // Remove admin role from a user
                        function removeAdmin(userId) {
                            handleAdminAction(`/admin-remove-admin/${userId}`, 'User is no longer an admin.');
                        }

                        // Block a user
                        function blockUser(userId) {
                            handleAdminAction(`/admin-block-user/${userId}`, 'User has been blocked.');
                        }

                        // Unblock a user
