                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="mb-0">Contact Forms</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Subject</th>
                                        <th>Message</th>
                                        <th>Submitted At</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (forms && forms.length > 0) { %>
                                        <% forms.forEach(function(form) { %>
                                            <tr data-form='<%- JSON.stringify(form).replace(/'/g, "&#39;") %>'>
                                                <td><%= form.name %></td>
                                                <td><%= form.email %></td>
                                                <td><%= form.phone || "-" %></td>
                                                <td><%= form.subject || "-" %></td>
                                                <td style="max-width:250px;word-break:break-word;"><%= form.message %></td>
                                                <td>
                                                    <%= form.createdAt ? new Date(form.createdAt).toLocaleString() : "-" %>
                                                </td>
                                                <td>
                                                    <% if (form.isReplied) { %>
                                                        <span class="badge bg-success">Replied</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (!form.isReplied) { %>
                                                        <button class="btn btn-sm btn-primary mark-replied-btn" data-id="<%= form._id %>">
                                                            Mark as Replied
                                                        </button>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">No contact forms found.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <script>
                        // Wait for DOMContentLoaded to ensure $ is defined
                        document.addEventListener('DOMContentLoaded', function() {
                            if (typeof window.$ === 'undefined') {
                                // fallback: try to get jQuery from window.jQuery
                                window.$ = window.jQuery;
                            }
                            if (typeof $ === 'undefined') {
                                console.error('jQuery is not loaded.');
                                return;
                            }
                            $(document).on('click', '.mark-replied-btn', function() {
                                var btn = $(this);
                                var id = btn.data('id');
                                if (!id) return;
                                btn.prop('disabled', true).text('Updating...');
                                $.ajax({
                                    url: '/replied/' + id,
                                    type: 'PATCH',
                                    success: function(res) {
                                        if (res && res.success) {
                                            // Update status in table row
                                            var row = btn.closest('tr');
                                            row.find('td:eq(6)').html('<span class="badge bg-success">Replied</span>');
                                            btn.replaceWith('<span class="text-muted">-</span>');
                                        } else {
                                            alert(res && res.message ? res.message : 'Failed to update.');
                                            btn.prop('disabled', false).text('Mark as Replied');
                                        }
                                    },
                                    error: function(xhr) {
                                        alert('Error: ' + (xhr.responseJSON && xhr.responseJSON.message ? xhr.responseJSON.message : 'Could not update.'));
                                        btn.prop('disabled', false).text('Mark as Replied');
                                    }
                                });
                            });
                        });
